@model MVCMOVIES.Models.Operations

@{
    ViewData["Title"] = "Create";
}
<div class="PartialViewAmount">
    <partial name="~/Views/infoes/Create.cshtml" />
</div>


<div class=row>


    <div class="col-xs-12">
        <div class="col-xs-4">
            <h3 class="initialAmount"></h3>
        </div>

        <div class="col-xs-4">
            <h3 class="ActualAmount"></h3>
        </div>

    </div>
  
    
</div>  

<hr />
<div class="col-xs-12">



    <div class="col-xs-2">
        

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" id="sandbox-container">
                <label asp-for="Date" class="control-label"></label>
                <input type="text" class="form-control">
            </div>


            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <div class="form-group">
                    <div class="checkbox">
                        <label class="switch">
                            <input asp-for="IsLost" type="checkbox"> @*@Html.DisplayNameFor(model => model.OperactionType)*@
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>

                <input asp-for="Amount" class="form-control" type="number" min="0"/>
                <span asp-validation-for="Amount" class="text-danger" ></span>
            </div>

            <div class="form-group">
                <label asp-for="Percentage" class="control-label"></label>
                <input asp-for="Percentage" class="form-control" />
                <span asp-validation-for="Percentage" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="OperactionType" class="control-label"></label>
                <div class="checkbox">
                    <label class="switch">
                        <input asp-for="OperactionType" type="checkbox"> @*@Html.DisplayNameFor(model => model.OperactionType)*@
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>



            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>



    <div class="col-xs-10">
        <div id="jsGrid"></div>
    </div>


    <div class="row">
        <canvas id="myChart" width="400" height="100"></canvas>
    </div>

</div>

@*<div>
        <a asp-action="Index">Back to List</a>
    </div>*@




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
